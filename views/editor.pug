html
  head
    script(src="/js/showErr.js")
    script(src="/js/publish.js")
    script(src="/js/editor.js")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/editorjs@latest")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/header@latest")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/delimiter@latest")
    script(src="https://cdn.jsdelivr.net/npm/@editorjs/inline-code@latest")
    link(rel="stylesheet", href="/css/navbar.css")
    link(rel="stylesheet", href="/css/editor.css")
    link(rel="stylesheet", href="https://fonts.googleapis.com/css2?family=Sora:wght@300;400&display=swap")
    title New Story
  body
    div(class="navbar")
      nav
        ul
          li 
            a(href="/")
              img(src="https://github.com/abhilashkasula/phrase-it/wiki/images/logo.png", alt="" class="logo")
        ul
          li(class="options")
            div
              button(class="disabled publish-button" id="publish") Publish
          li(class="avathar-nav")
            a(href="/stories")
              img(src=`${avatar_url}`, alt="" class="navbar-avathar")
    div(id="status" class="status-hide") status
    div(id="error" class="err-hide") error
    div(class="container")
      div(id="new-blog")
        div
          label Title:
          br
          input(type="text", id="title")
        div
          label Story:
          div(id="editor")
